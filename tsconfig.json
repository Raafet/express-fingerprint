{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./lib",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es6",
    "module": "commonjs",
    "allowJs": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
